- provide(:title, 'Categories')

.grid-x
  .cell
    %ul.nav-buttons
      %li
        = link_to recipes_path, class: 'warning' do
          %i.fa.fa-list
          Browse latest recipes
      %ul
        %li
          = link_to new_category_path, class: 'alert' do
            %i.fa.fa-plus-circle
            Create a new category
        %li
          = link_to new_recipe_path, class: 'alert' do
            %i.fa.fa-plus-circle
            Add a recipe
.grid-x
  .small-12.cell
    %h1 Browse Categories

.grid-x
  = render @categories.in_use

- if @categories.not_used.any?
  .grid-x
    .small-12.cell
      %p= link_to 'More categories', '#', class: 'toggle hideShow', remote: true
      .hidden.hideShow
        %p= link_to 'Hide', '#', class: 'toggle', remote: true
        .grid-x
          = render @categories.not_used
