.nested-fields
  .callout
    .row
      .medium-push-6.medium-6.columns
        .inline-icon
          = link_to_remove_association f, class: 'red-text' do
            %i.fa.fa-trash
            Remove Recipe Part
      .medium-pull-6.medium-6.columns
        = f.label :name, 'Recipe part name (optional for single part recipes)'
        = f.text_field :name, placeholder: 'Pie Crust'

    = render 'ingredients/fields_for_form', f: f

    = render 'steps/fields_for_form', f: f
