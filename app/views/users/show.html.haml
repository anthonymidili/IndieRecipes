.grid-x
  .small-12.cell
    .float-right
      = link_to new_recipe_path do
        %i.fa.fa-plus-circle
        Add a recipe
.grid-x
  .cell.small-12
    .green-background
      .float-right
        = link_to edit_user_path(@user) do
          %i.fas.fa-edit
          Edit about you
      %h1.no-background #{@user.username}'s Cookbook
      .grid-x
        .cell.medium-4.large-3
          %p
            - if @user.avatar.attached?
              = link_to edit_user_path(@user) do
                = image_tag avatar_image(@user.avatar, 150)
            - else
              %i.fas.fa-user.default-avatar-150
        - if @user.info
          .cell.medium-8.large-9
            .autolinks= simple_format(@user.info.body)
- if @user == current_user && @user.recipes.by_unpublished.any?
  .grid-x
    .small-12.cell
      %h4 Unpublished Drafts
      .grid-x
        = render @user.recipes.by_unpublished
- if @user.recipes.by_published.any?
  .grid-x
    .small-12.cell
      %h4 Submitted Recipes
      .grid-x
        = render @user.recipes.by_published
- if @user.favorite_recipes.any?
  .grid-x
    .small-12.cell
      %h4 Favorites
      .grid-x
        = render @user.favorite_recipes
