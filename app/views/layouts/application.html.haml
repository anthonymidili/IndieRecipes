!!!
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}/

    = display_meta_tags

    = favicon_link_tag asset_pack_path('media/images/favicon.png')
    %title= content_for?(:title) ? "Recipedia | #{yield(:title)}" : 'Recipedia'

    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': true
    = csrf_meta_tags
  %body
    #wrap
      = render 'layouts/top_bar'

      #main
        = render 'notifications/flash_messages'
        = render 'layouts/search_box'
        = yield
        -# Render a page print footer on every printed page
        = render 'layouts/print_footer'

    = render 'layouts/footer'
