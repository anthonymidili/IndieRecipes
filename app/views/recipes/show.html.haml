- provide(:title, @recipe.name)

.row
  .small-12.columns
    .float-right
      = link_to 'Edit', edit_recipe_path(@recipe)
      or
      = link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' }
      Recipe
.row
  .small-12.columns
    %h1= @recipe.name
    %p.callout= @recipe.description

    %p
      %b Assigned Categories:
      = links_to_categories(@recipe)

    .callout
      %h3 Ingredients:
      - @recipe.parts.each do |part|
        %h4= part.name
        = render part.ingredients

    .callout
      %h3 Steps:
      - @recipe.parts.each do |part|
        %h4= part.name
        = render part.steps.by_order


    = link_to 'Home', categories_path
    \|
    = link_to 'Recipes', recipes_path
