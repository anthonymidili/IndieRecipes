- provide(:title, @recipe.name)

- if @recipe.user == current_user
  .row
    .small-12.columns
      .float-right
        = link_to 'Edit', edit_recipe_path(@recipe)
        or
        = link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' }
        your Recipe

.row
  .small-12.columns
    %p
      %b Assigned Categories:
      = links_to_categories(@recipe)

.row
  .medium-7.columns
    %h1= @recipe.name
    %p
      %b Swapper:
      = @recipe.user.username
    %p
      = @recipe.description
  .medium-5.columns
    .center= image_tag @recipe.image_url(:large), class: 'max-image-height' if @recipe.image_data?

.row
  .small-12.columns
    %h4 Ingredients:
    .callout
      - @recipe.parts.each do |part|
        %h4= part.name
        = render part.ingredients.by_order
        %br/

    %h4 Steps:
    .callout
      - @recipe.parts.each do |part|
        %h4= part.name
        - part.steps.by_order.each_with_index do |step, index |
          %span.red-text= "#{index += 1}."
          = step.description
          %br/
        %br/

    = link_to 'Recipes', recipes_path
