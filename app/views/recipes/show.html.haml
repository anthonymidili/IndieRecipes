- provide(:title, @recipe.name)

.row
  .small-12.columns
    .float-right
      = link_to 'Edit', edit_recipe_path(@recipe)
      or
      = link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' }
      Recipe
.row
  .small-12.columns
    %h1= @recipe.name
    = @recipe.description
    %hr/

    %p
      %b Assigned Categories:
      = links_to_categories(@recipe)

    %h3 Ingredients:
    .callout
      - @recipe.parts.each do |part|
        %h4= part.name
        = render part.ingredients.by_order
        %br/

    %h3 Steps:
    .callout
      - @recipe.parts.each do |part|
        %h4= part.name
        = render part.steps.by_order
        %br/


    = link_to 'Home', categories_path
    \|
    = link_to 'Recipes', recipes_path
